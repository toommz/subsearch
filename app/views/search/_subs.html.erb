<% if subs.class == String %>
  <div class="row">
    <h4><%= subs %></h4>
  </div>
<% elsif subs['data'] != false %>
  <% subs['data'].each do |sub| %>
    <div class="row">
      <div class="small-12 columns panel <%= cycle('callout', '') %>">
        <h2><%= sub['MovieName'] %></h2>
        <h3><%= sub['SubFileName'] %></h3>
        <h4><%= sub['LanguageName'] %></h4>
        <h6>Rating: <%= sub['SubRating'] %></h6>
        <%= link_to 'Download', sub['ZipDownloadLink'] %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="row">
    <h4>No subtitles found</h4>
  </div>
<% end %>
